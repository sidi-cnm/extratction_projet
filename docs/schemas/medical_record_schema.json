        "properties": {
          "langue":{"type":"string"},
          "source":{"type":"string"},
          "date_extraction":{"type":"string","format":"date"},
          "modele_utilise":{"type":"string"}
        },
        "required":["langue","date_extraction","modele_utilise"]
      }
    },
    "required": ["patient","resume_structure","meta"]
  }




  


